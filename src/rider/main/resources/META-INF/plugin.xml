<idea-plugin require-restart="true">
  <id>com.intelligentComments</id>
  <name>IntelligentComments</name>
  <version>_PLACEHOLDER_</version>
  <vendor>asd</vendor>
  <depends>com.intellij.modules.rider</depends>

  <extensionPoints>
    <extensionPoint name="intelligentCommentsEditorHandler"
                    interface="com.intelligentComments.core.editors.EditorHandler"/>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intelligentComments">
    <intelligentCommentsEditorHandler implementation="com.intelligentComments.core.editors.RiderEditorHandler" />
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceInterface="com.intelligentComments.ui.colors.ColorsProvider"
                    serviceImplementation="com.intelligentComments.ui.colors.ColorsProviderImpl" />
    <projectService serviceImplementation="com.intelligentComments.core.settings.RiderIntelligentCommentsSettingsProviderImpl"
                    serviceInterface="com.intelligentComments.core.settings.RiderIntelligentCommentsSettingsProvider"/>
    <projectService serviceImplementation="com.intelligentComments.core.comments.RiderCommentsStateManager" />

    <rdclient.highlighterModelSupport implementation="com.intelligentComments.core.markup.DocCommentsFoldingHighlightersSupport" />
  </extensions>

  <project-components>
    <component>
      <implementation-class>com.intelligentComments.core.editors.IntelligentCommentsEditorsFactoryListener</implementation-class>
    </component>
    <component>
      <implementation-class>com.intelligentComments.core.comments.RiderCommentsController</implementation-class>
    </component>
    <component>
      <implementation-class>com.intelligentComments.core.protocol.ProtocolModelsRegistrar</implementation-class>
    </component>
  </project-components>
</idea-plugin>
